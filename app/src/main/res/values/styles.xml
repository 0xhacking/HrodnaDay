<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--<style name="AppTheme.Translucent" parent="AppTheme">-->
        <!--<item name="windowBackground">color/translucent</item>-->
        <!--<item name="colorBackgroundCacheHint">null</item>-->
        <!--<item name="windowIsTranslucent">true</item>-->
        <!--&lt;!&ndash; Note that we use the base animation style here (that is no-->
             <!--animations) because we really have no idea how this kind of-->
             <!--activity will be used. &ndash;&gt;-->
        <!--<item name="windowAnimationStyle">@style/Animation</item>-->
    <!--</style>-->

    <style name="GeneralButton">
        <item name="android:background">@color/BUTTON_COLOR</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Theme.AppCompat.Light.WithoutTitle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="MyTheme" parent="AppTheme" >
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <declare-styleable name="AppTheme">
        <attr name="primaryTextColor" format="color"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="iconPlaceHolder" format="integer"/>
    </declare-styleable>
    
    <style name="MyTheme.Light" parent="MyTheme">
        <item name="primaryTextColor">#000000</item>
        <item name="backgroundColor">#50000000</item>
    </style>

    <style name="MyTheme.Dark" parent="MyTheme">
        <item name="primaryTextColor">#FFFFFF</item>
        <item name="backgroundColor">#50f0f0f0</item>
    </style>

</resources>
