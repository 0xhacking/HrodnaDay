<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/NOTE_PADDING"
    android:background="@drawable/colorlees_background"
    android:isScrollContainer="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/colorlees_background">

        <TextView
            android:id="@+id/day_one_event_card_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:textColor="?attr/primaryTextColor"
            android:textSize="@dimen/SMALL_TEXT_SIZE"
            tools:text="1 March 2018" />

        <TextView
            android:id="@+id/back_to_today_text_view"
            android:layout_width="?attr/smallTitle"
            android:layout_height="?attr/smallTitle"
            android:layout_alignBottom="@+id/day_one_event_card_text_view"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/NEIGHBOR_FRAGMENT_PADDING"
            android:layout_marginRight="@dimen/NEIGHBOR_FRAGMENT_PADDING"
            android:background="@drawable/ic_arrow"
            android:clickable="true"
            android:focusable="true"
            android:textColor="?attr/primaryTextColor"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/frame_card_relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/day_one_event_card_text_view"
            android:background="@drawable/frame_background">


            <RelativeLayout
                android:id="@+id/picture_layer_relative_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/picture_one_event_card_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:clickable="true"
                    android:elevation="@dimen/PICTURE_ELEVATION"
                    android:focusable="true"
                    android:scaleType="fitCenter" />

            </RelativeLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/title_one_event_card_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frame_card_relative_layout"
            android:clickable="true"
            android:focusable="true"
            android:textColor="?attr/primaryTextColor"
            android:textSize="@dimen/TITLE_TEXT_SIZE"
            tools:text="Title" />

        <TextView
            android:id="@+id/author_one_event_card_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_one_event_card_text_view"
            android:textColor="?attr/primaryTextColor"
            android:textSize="@dimen/MIDDLE_TEXT_SIZE"
            tools:text="Zhora Bukovski" />

        <TextView
            android:id="@+id/creating_one_event_card_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/author_one_event_card_text_view"
            android:textColor="?attr/primaryTextColor"
            android:textSize="@dimen/SMALL_TEXT_SIZE"
            tools:text="XX century" />

        <TextView
            android:id="@+id/description_one_event_card_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/creating_one_event_card_text_view"
            android:textColor="?attr/primaryTextColor"
            android:textSize="@dimen/NORMAL_TEXT_SIZE" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/NoteLayerStyle"
            android:orientation="horizontal"
            android:layout_below="@id/description_one_event_card_text_view">
            <LinearLayout
                android:layout_width="@dimen/LINE_WIDTH"
                android:layout_height="match_parent"
                android:padding="@dimen/SMALL_NOTE_PADDING"
                android:background="?attr/primaryTextColor">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/SMALL_NOTE_PADDING">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/geometry_icon_image_view"
                        android:layout_width="@dimen/SIZE_SMALL_ICON"
                        android:layout_height="@dimen/SIZE_SMALL_ICON"
                        android:background="@drawable/ic_geometry"
                        android:padding="@dimen/SMALL_NOTE_PADDING"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/size_one_card_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/SMALL_NOTE_PADDING"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/material_icon_image_view"
                        android:layout_width="@dimen/SIZE_SMALL_ICON"
                        android:layout_height="@dimen/SIZE_SMALL_ICON"
                        android:background="@drawable/ic_painter_palette"
                        android:padding="@dimen/SMALL_NOTE_PADDING"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/material_one_card_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/SMALL_NOTE_PADDING"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>