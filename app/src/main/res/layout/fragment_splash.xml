<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/app_icon_splash_image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_coat_of_arms_of_hrodna" />

    <TextView
        android:id="@+id/title_splash_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_icon_splash_image_view"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/SMALL_NOTE_PADDING"
        android:text="@string/app_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_splash_text_view"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/SMALL_NOTE_PADDING"
        android:text="@string/YOUR_PEACE_OF_HISTORY" />

</RelativeLayout>